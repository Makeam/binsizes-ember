<h3>Configuration ID:{{model.binsize.id}}</h3>
<div>
    Use
    <select {{action "changeType" on="change"}}>
        <option>bin distribution of block sizes, with custom bins</option>
        <option>constant block sizes</option>
    </select>
</div>
{{#if model.binsize.const}}
<div>
    of
    <select>
        <option>512 Bytes</option>
        <option>1 KB</option>
        <option>2 KB</option>
        <option>4 KB</option>
        <option>8 KB</option>
        <option>16 KB</option>
    </select>
</div>
{{/if}}
<hr>
<div>
    {{#each model.binsize.packages as |package|}}
    <div>
        {{ package.percent }}%
        <input value={{package.percent}} onkeyup={{action (action "changePercent" package) value="target.value"}}/>
        {{ package.val }}{{ package.unit }}
    </div>
    {{/each}}
</div>
<div>
    <p>Allocated: {{model.binsize.allocated}}%</p>
    <p>Available for use: {{model.binsize.available}}%</p>
</div>
<hr>
<label>Size</label>
<input>
<select>
    <option>B</option>
    <option>KB</option>
    <option>MB</option>
</select>
<button {{action "addBin"}}>Add Bin</button>
<hr>
<button>Save Configuration</button>


