<h3>Configuration ID:{{model.id}}</h3>
<div>
    Use
    <select>
        <option>bin distribution of block sizes, with custom bins</option>
        <option>constant block sizes</option>
    </select>
</div>
{{#if model.const}}
<div>
    of
    <select>
        <option>512 Bytes</option>
        <option>1 KB</option>
        <option>2 KB</option>
        <option>4 KB</option>
        <option>8 KB</option>
        <option>16 KB</option>
    </select>
</div>
{{/if}}
<hr>
<div>
    {{#each model.packages as |package|}}
        {{package.val}}{{package.unit}} - {{package.percent}}%
    {{/each}}
</div>
<hr>
<label>Size</label>
<input>
<select>
    <option>B</option>
    <option>KB</option>
    <option>MB</option>
</select>
<button>Add Bin</button>

